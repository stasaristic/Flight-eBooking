    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model Flight_eBooking.Core.ViewModels.EditFlightViewModel
@{
    ViewData["Title"] = "Edit existing flight";
}


    <div class="py-5 text-center">
        <h2>Edit Flight Details</h2>
        <p class="lead">Edit Flight information using the form bellow.</p>
    </div>
    <div class="row g-5">
        <div class="col-md-6 col-lg-4 container" style="justify-content:center; align-items:center; display:flex; margin-top:10px;">
            @using (Html.BeginForm("OnPost", "Flights"))
            {
                @Html.HiddenFor(h => @Model.Flight.Id);
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label asp-for="@Model.Flight.FlightName" class="form-label" style="font-weight:bold;"></label>                    
                        <label>@Model.Flight.FlightName</label>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="@Model.Flight.DepartureDate" class="form-label"></label>
                        <input asp-for="@Model.Flight.DepartureDate" class="hasDatePicker" autocomplete="firstname" aria-required="true" />
                        <span asp-validation-for="@Model.Flight.FlightName" class="text-danger">
                        </span>
                    </div>
                </div>
                <div class="row g-3" style="margin-top:15px">
                    <div class="col-sm-6">
                        <label asp-for="@Model.Flight.Seats" class="form-label"></label>
                        <input asp-for="@Model.Flight.Seats" class="form-control" autocomplete="lastname" aria-required="true" />
                        <span asp-validation-for="@Model.Flight.Seats" class="text-danger">
                        </span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="@Model.Flight.TicketPrice" class="form-label"></label>
                        <input asp-for="@Model.Flight.TicketPrice" class="form-control" autocomplete="funds" aria-required="true" />
                        <span asp-validation-for="@Model.Flight.TicketPrice" class="text-danger">
                        </span>
                    </div>
                </div>
                
                <div class="form-group">
                    <label asp-for="@Model.Flight.FlightClass" class="control-label"></label>
                    <select asp-for="@Model.Flight.FlightClass" class="form-control" asp-items="Html.GetEnumSelectList<FlightClass>()">
                        <option disabled selected>@Model.Flight.FlightClass</option>
                    </select>
                    <span asp-validation-for="@Model.Flight.FlightClass" class="text-danger"></span>
                </div>
                
                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
            }
        </div>
               
    </div>



