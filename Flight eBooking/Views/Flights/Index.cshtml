@{
    ViewData["Title"] = "List of Flights";
    string[] TableHeaders = new string[] { "Flight Name", "Departure Date", "Flight Class",
        "Ticket Price", "Seats", "Departure Destination",
            "Arrival Destination"};
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    @{
                        foreach (var head in TableHeaders)
                        {
                            <th>
                                @head
                            </th>
                        }
                    }
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @item.[0];
                        </td>
                        <td class="align-middle">
                            @item["DepartureDate"].ToString();
                        </td>
                        <td class="align-middle">
                            @item["FlightClass"].ToString();
                        </td>
                        <td class="align-middle">
                            @item["TicketPrice"].ToString();
                        </td>
                        <td class="align-middle">
                            @item["Seats"].ToString();
                        </td>
                        <td class="align-middle">
                            @item["DepartureName"].ToString();
                        </td>
                        <td class="align-middle">
                            @item["ArrivalName"].ToString();
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id=""><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id=""><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id=""><i class="bi bi-trash"></i>Delete </a>
                        </td>


                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

